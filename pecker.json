{
  "name": "pecker-docs",
  "baseUrl": "/pecker/dist",
  "destDir": "./dist",
  "skipHash": true,
  "assets": [
    {
      "name": "fonts",
      "type": "folder",
      "folder": "./src/fonts"
    },
    {
      "name": "images",
      "type": "folder",
      "folder": "./src/images"
    },
    {
      "name": "site.css",
      "type": "file",
      "files": [
        "./src/site/site.scss"
      ],
      "watch": [
        "./src/site/**/*.scss",
        "./src/**/*.scss"
      ],
      "transform": [
        {
          "fn": "sass",
          "args": {
            "includePaths": [
              "./src/",
              "./src/components/",
              "./bower_components/neat/app/assets/stylesheets",
              "./bower_components/bourbon/dist/",
              "./bower_components/normalize-scss"
            ]
          }
        },
        "autoprefixer"
      ]
    },
    {
      "name": "common.js",
      "type": "browserify",
      "entries": [],
      "require": [
        {
          "type": "bower",
          "name": "jquery"
        },
        {
          "type": "module",
          "name": "contentloaded",
          "expose": "contentloaded",
          "location": "./src/components/pussshy/js/pussshy.js"
        },
        {
          "type": "module",
          "name": "Pussshy",
          "expose": "Pussshy",
          "location": "./src/components/pussshy/js/pussshy.js"
        }
      ],
      "transform": [
        "deamdify"
      ],
      "watch": [
        "./src/components/pussshy/js/pussshy.js"
      ]
    },
    {
      "name": "site.js",
      "type": "browserify",
      "entries": [],
      "require": [],
      "external": [
        "common.js"
      ]
    },
    {
      "name": "sitePackage",
      "type": "package",
      "assetNames": [
        "site.css",
        "common.js",
        "site.js"
      ]
    }
  ]
}
